- var inside = true

doctype html
html
	head
		meta(http-equiv="Content-Type" content="text/html;charset=UTF-8")
		meta(name='viewport' content='width=device-width, initial-scale=1, maximum-scale=1')
		
		block head
		title #{pageTitle} | hiredrone.io
		meta(name='description' content=pageDescription || '')
		meta(name='keywords' content=pageKeywords || '')

		link(href='assets/css/de.min.css' rel='stylesheet')
		script(src='assets/js/jquery-1.9.1.min.js')
		script(src='assets/js/de.min.js')

		//- script(src='assets/js/fabric.min.js')
		//- script(src='assets/js/drones_fabriccanvas.js')


		link(rel="icon" href="favicon.ico" type="image/x-icon")
		link(rel="shortcut icon" href="favicon.ico" type="image/x-icon")
		link(rel="apple-touch-icon" sizes="114x114" href="apple-touch-icon-114x114.png")
		link(rel="apple-touch-icon" sizes="72x72" href="apple-touch-icon-72x72.png")

	block layout
	body(class=inside ? 'inside' : 'home')

		//[if lte IE 8]><div id="oldiebrowser"><p><b>Oops, it seams that you are using an old browser</b></p><span>Please, download latest version of Google Chrome, Yandex browser, Mozilla Firefox or Safari for better interaction.</span></div><![endif]

		
		include  ../includes/header.jade
		
		main(role="main")
			block content

		include ../includes/footer.jade